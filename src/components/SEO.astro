---
// src/components/SEO.astro
interface Props {
    title: string;
    description: string;
    keywords?: string;
    image?: string;
    url?: string;
    type?: string;
}

const { 
    title, 
    description, 
    keywords = "desarrollador web, programador, ingeniero IoT, Francisco Romero, Romer Dev, desarrollo frontend, desarrollo backend, React, Node.js, Python, IoT",
    image = "/og-image.jpg",
    url = "https://romer-dev.com",
    type = "website"
} = Astro.props;

const fullTitle = title === "Romer-Dev" ? "Romer Dev - Francisco Romero | Desarrollador Web & Ingeniero IoT" : `${title} | Romer Dev`;
---

<!-- Meta tags básicos -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content="Francisco Romero" />
<meta name="robots" content="index, follow" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={url} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={image} />
<meta property="og:site_name" content="Romer Dev" />
<meta property="og:locale" content="es_ES" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={url} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={image} />
<meta property="twitter:creator" content="@franckromer" />

<!-- Canonical URL -->
<link rel="canonical" href={url} />

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

<!-- Structured Data / JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Francisco Romero",
    "alternateName": "Romer Dev",
    "url": "https://romer-dev.com",
    "image": "https://romer-dev.com/profile-image.jpg",
    "sameAs": [
        "https://github.com/FranckRomer",
        "https://www.linkedin.com/in/franckromer",
        "https://wa.me/2211160885"
    ],
    "jobTitle": "Desarrollador Web e Ingeniero IoT",
    "worksFor": {
        "@type": "Organization",
        "name": "Freelance"
    },
    "description": "Desarrollador web full-stack especializado en React, Node.js, Python e IoT. Más de 3 años de experiencia en desarrollo de aplicaciones web y sistemas embebidos.",
    "knowsAbout": [
        "JavaScript", "React", "Node.js", "Python", "C++", "IoT", 
        "Web Development", "Frontend Development", "Backend Development",
        "Database Design", "API Development", "Hardware Programming"
    ],
    "address": {
        "@type": "PostalAddress",
        "addressCountry": "AR"
    }
})} />

<!-- Preconnect para mejor rendimiento -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
