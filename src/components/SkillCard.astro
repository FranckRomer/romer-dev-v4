---
// src/components/SkillCard.astro

interface Props {
    name: string;
    icon: string;
    color: string;
    delay?: number;
}

const { name, icon, color, delay = 0 } = Astro.props;
---

<div 
    class="flex flex-col items-center bg-gray-800/70 rounded-xl p-4 shadow-lg hover:scale-105 transition-all duration-300 group"
    style={`animation-delay: ${delay}ms;`}
>
    <div class="w-12 h-12 mb-2 flex items-center justify-center">
        <img
            src={icon}
            alt={name}
            class="w-full h-full object-contain max-w-full max-h-full"
            loading="lazy"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
        />
        <!-- Fallback si la imagen no carga -->
        <div class="w-full h-full bg-gray-600 rounded flex items-center justify-center text-white text-xs font-bold hidden">
            {name.charAt(0).toUpperCase()}
        </div>
    </div>
    <span class={`font-semibold text-center ${color} group-hover:text-white transition-colors duration-300`}>
        {name}
    </span>
</div>

<style>
    /* Asegurar que las imágenes mantengan su proporción */
    img {
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
    }
    
    /* Efecto hover mejorado */
    .group:hover img {
        transform: scale(1.1);
        transition: transform 0.3s ease;
    }
</style>
