---
import "../styles/global.css";
import Dock from "../components/Dock.astro";
import SkillSection from "../components/SkillSection.astro";
import { skills } from "../data/skills.js";
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Romer-Dev | Habilidades</title>
    </head>
    <Dock site="Habilidades" />
    <body class="bg-black text-gray-100 min-h-screen">
        <main class="flex flex-col items-center justify-center min-h-screen py-10 px-4">
            <h1 class="text-4xl font-bold text-blue-400 mb-8 fade-in-up">Habilidades</h1>
            
            <div class="w-full max-w-6xl space-y-8">
                <!-- Habilidades Blandas -->
                <section class="fade-in-up-delay-1">
                    <h2 class="text-2xl font-bold text-cyan-400 mb-4">Habilidades Blandas</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">🤝</span>
                            <span class="text-white">Trabajo en equipo</span>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">💡</span>
                            <span class="text-white">Creatividad</span>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">🧠</span>
                            <span class="text-white">Resolución de problemas</span>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">📚</span>
                            <span class="text-white">Aprendizaje continuo</span>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">🗣️</span>
                            <span class="text-white">Comunicación efectiva</span>
                        </div>
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">⚡</span>
                            <span class="text-white">Adaptabilidad</span>
                        </div>
                        <!-- automatización -->
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">🤖</span>
                            <span class="text-white">Automatización</span>
                        </div>
                        <!-- liderazgo -->
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">👥</span>
                            <span class="text-white">Liderazgo</span>
                        </div>
                        <!-- toma de decisiones -->
                        <div class="flex items-center gap-3 p-4 bg-gray-800/50 rounded-xl">
                            <span class="text-2xl">🤔</span>
                            <span class="text-white">Toma de decisiones</span>
                        </div>
                    </div>
                </section>

                <!-- Habilidades Técnicas -->
                <section class="fade-in-up-delay-2">
                    <h2 class="text-2xl font-bold text-cyan-400 mb-6">Habilidades Técnicas</h2>
                    <SkillSection title="Lenguajes de Programación" skills={skills.languages} />
                    <SkillSection title="Frontend" skills={skills.frontend} />
                    <SkillSection title="Backend " skills={skills.backend} />
                    <SkillSection title="Bases de Datos" skills={skills.basesData} />
                    <SkillSection title="DevOps" skills={skills.devops} />
                    <SkillSection title="Hardware y Microcontroladores" skills={skills.hardware} />
                    <SkillSection title="Herramientas" skills={skills.tools} />
                </section>
            </div>
        </main>
        <footer class="w-full max-w-4xl my-10 text-white">
            <p>
                <span>🤝</span> Francisco Romero
            </p>
        </footer>
    </body>
</html>
