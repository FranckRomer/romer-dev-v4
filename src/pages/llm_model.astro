--- 
import "../styles/global.css";
import Dock from "../components/Dock.astro";
import SEO from "../components/SEO.astro";
import ChatLLM from "../components/ChatLLM.jsx";
---

<html lang="es">
	<head>
		<SEO
			title="Asistente IA - Romer-Dev"
			description="Asistente de IA personalizado de Francisco Romero. Pregunta sobre mi experiencia, proyectos y habilidades de desarrollo."
			keywords="asistente IA, chatbot, Francisco Romero, Romer Dev, consultas, desarrollo web, IoT"
			url="https://romer-dev.com/llm_model"
		/>
